<Page x:Class="RevoltUltimate.Setup.Pages.AccountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Accounts">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Link Your Accounts" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            <TextBlock Text="Connect your accounts to unlock more features." Margin="0,0,0,20"/>
            <Button x:Name="LinkSteamButton" Content="Link Steam" Margin="5" Click="LinkSteamButton_Click"/>
            <Button Content="Finish" Width="120" Height="40" Margin="0,20,0,0" Click="Finish_Click"/>
        </StackPanel>
    </Grid>
</Page>