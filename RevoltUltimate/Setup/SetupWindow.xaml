<Window x:Class="RevoltUltimate.Desktop.Setup.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RevoltUltimate.Desktop.Setup"
        mc:Ignorable="d"
        Title="Setup" Height="700" Width="760"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="HideContextMenu"
        Style="{StaticResource GlobalWindowStyle}">
    
    <Window.Resources>
        <Style x:Key="ProgressCircleStyle" TargetType="Border">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#666666"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Background" Value="#3b82f6"/>
                    <Setter Property="BorderBrush" Value="#3b82f6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="PlatformBoxStyle" TargetType="Border">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#666666"/>
                </Trigger>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="BorderBrush" Value="#3b82f6"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CheckmarkStyle" TargetType="Path">
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ContextMenuStyle" TargetType="Border">
            <Setter Property="Background" Value="#2a2a2a"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsVisible}" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Setter.Value>
                    </Setter>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SetupButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#3b82f6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2563eb"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="GreenSetupButtonStyle" TargetType="Button" BasedOn="{StaticResource SetupButtonStyle}">
            <Setter Property="Background" Value="#16a34a"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#15803d"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ContextMenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3b82f6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <!-- Main Window Container with Content -->
    <Grid>
        <Border CornerRadius="12" Background="#121212">
            <DockPanel>
                <!-- Top Bar -->
                <Border DockPanel.Dock="Top" Height="48" Background="#1e1e1e" CornerRadius="12,12,0,0"
                        MouseDown="TitleBar_MouseDown">
                    <Grid>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="16,0,0,0">
                            <TextBlock Text="R" FontWeight="Black" FontSize="20" FontStyle="Italic" Foreground="#3b82f6"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,16,0">
                            <Border Width="12" Height="12" Background="#666666" CornerRadius="6" 
                                    Margin="0,0,12,0" MouseDown="Minimize_Click" Cursor="Hand"/>
                            <Border Width="12" Height="12" Background="#666666" CornerRadius="6" 
                                    MouseDown="Close_Click" Cursor="Hand"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Main Content -->
                <Grid Margin="32">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Progress Steps -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,32">
                        <Border x:Name="Progress1" Style="{StaticResource ProgressCircleStyle}">
                            <TextBlock Text="1" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Foreground="White"/>
                        </Border>
                        <Rectangle Width="48" Height="2" Fill="#666666" Margin="4,0" VerticalAlignment="Center"/>
                        <Border x:Name="Progress2" Style="{StaticResource ProgressCircleStyle}">
                            <TextBlock Text="2" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Foreground="White"/>
                        </Border>
                        <Rectangle Width="48" Height="2" Fill="#666666" Margin="4,0" VerticalAlignment="Center"/>
                        <Border x:Name="Progress3" Style="{StaticResource ProgressCircleStyle}">
                            <TextBlock Text="3" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"
                                     Foreground="White"/>
                        </Border>
                    </StackPanel>

                    <!-- Steps Container -->
                    <Grid Grid.Row="1">
                        <!-- Step 1: Welcome -->
                        <Grid x:Name="Step1" Visibility="Visible">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Welcome to Setup" FontSize="48" FontWeight="ExtraBold" 
                                         HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Let's get everything configured so you can get started right away." 
                                         Foreground="#a0aec0" FontSize="16" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" MaxWidth="400" Margin="0,0,0,32"/>
                                <Button Content="Get Started" Style="{StaticResource SetupButtonStyle}"
                                      HorizontalAlignment="Center" Click="GoToStep2"/>
                            </StackPanel>
                        </Grid>

                        <!-- Step 2: Username and Profile Picture -->
                        <Grid x:Name="Step2" Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Create Your Profile" FontSize="36" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Choose a username and a profile picture." 
                                         Foreground="#a0aec0" FontSize="16" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" Margin="0,0,0,32"/>
                                
                                <!-- Profile Picture Upload -->
                                <Border x:Name="PfpPreviewContainer" Width="128" Height="128" 
                                      CornerRadius="64" BorderThickness="3" BorderBrush="#4a5568" 
                                      Background="#1e1e1e" 
                                      HorizontalAlignment="Center" Margin="0,0,0,32">
                                    <Grid>
                                        <Path x:Name="PfpPlaceholder" Data="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" 
                                            Stroke="#666666" StrokeThickness="2" Width="64" Height="64"/>
                                        <Image x:Name="PfpPreview" Visibility="Collapsed" Stretch="UniformToFill"/>
                                    </Grid>
                                </Border>
                                
                                <!-- Username Input -->
                                <Border BorderThickness="2" BorderBrush="#666666" Background="#1e1e1e" 
                                      CornerRadius="8" Width="300" Margin="0,0,0,32">
                                    <TextBox x:Name="UsernameInput" Background="Transparent" BorderThickness="0" 
                                           Foreground="White" Padding="16,12" FontSize="16"
                                           VerticalContentAlignment="Center"
                                           TextAlignment="Center"
                                           Text="PixelMaster"/>
                                </Border>
                                
                                <Button Content="Next Step" Style="{StaticResource SetupButtonStyle}"
                                      HorizontalAlignment="Center" Click="GoToStep3"/>
                            </StackPanel>
                        </Grid>

                        <!-- Step 3: Link Accounts -->
                        <Grid x:Name="Step3" Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="Link Your Gaming Accounts" FontSize="36" FontWeight="Bold" 
                                         HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Click an icon to link an account." 
                                         Foreground="#a0aec0" FontSize="16" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" Margin="0,0,0,24"/>
                                
                                <!-- Gaming Platform Grid -->
                                <UniformGrid Columns="5" Rows="2" HorizontalAlignment="Center" Width="580">
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm3.233 15.25c-2.43.914-4.86-.914-4.86-.914l-2.057 4.114c0 0-1.643-1.029-2.057-1.843 0 0 2.271-4.971 2.271-6.17 0-1.2-1.843-4.757-1.843-4.757 1.029-.617 2.057-.206 2.057-.206L10.8 9.586s2.43-.914 4.86.914c2.43 1.829.617 4.543.617 4.543s1.814-2.714-.617-4.543zM16.18 12c0-1.238-1.008-2.246-2.246-2.246s-2.246 1.008-2.246 2.246 1.008 2.246 2.246 2.246 2.246-1.008 2.246-2.246z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark1" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M11.998 0C5.37 0 0 5.37 0 11.998c0 6.628 5.37 11.996 11.998 11.996C18.628 23.994 24 18.626 24 11.998C24 5.37 18.628 0 11.998 0zm6.65 16.335c.48-.602.58-1.544.1-2.146l-4.43-5.334a.492.492 0 0 1 .02-.685l3.52-2.92c.502-.416.59-.115.22.4l-3.32 4.62-3.1-3.69c-.582-.69-.938-.82-1.46-.24-.52.58-.33 1.35.25 2.04l3.1 3.692-3.32 4.62c-.37.515-.282.815.22.4l3.522-2.92a.492.492 0 0 1 .685.02l4.43 5.334c.48.602 1.22.815 1.7-.1zm-10.27-9.45c1.47-1.758 4.22-4.52 6.08-5.388 1.86-.868 3.52.27 3.52 2.064 0 1.8-1.66 2.93-3.52 3.8-1.86.86-4.61 3.62-6.08 5.38-1.47 1.75-4.22 4.52-6.08 5.38-1.86.87-3.52-.27-3.52-2.06-1.E-4 -1.798 1.66-2.932 3.52-3.802 1.86-.867 4.61-3.62 6.08-5.374z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark2" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zM8.64 18.36c.24.24.56.36.88.36s.64-.12.88-.36l3.52-3.52-1.76-1.76-3.52 3.52zm7.04-10.32c-.24-.24-.56-.36-.88-.36s-.64.12-.88.36l-3.52 3.52 1.76 1.76 3.52-3.52zm-3.52 8.48l-1.76 1.76-3.52-3.52c-.48-.48-.48-1.28 0-1.76l3.52-3.52 1.76 1.76-3.52 3.52 3.52 3.52zM12 10.28l-1.76-1.76-1.76 1.76 1.76 1.76 1.76-1.76zm8.8 6.56l-3.52 3.52c-.24.24-.56.36-.88.36s-.64-.12-.88-.36l-1.76-1.76 3.52-3.52 1.76 1.76c.48.48.48 1.28 0 1.76z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark3" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm-1.2 18H8.4V6h2.4v12zm6-12h-2.4v12H18c2.4 0 3.6-1.2 3.6-3.6V9.6c0-2.4-1.2-3.6-3.6-3.6z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark4" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.4c5.28 0 9.6 4.32 9.6 9.6s-4.32 9.6-9.6 9.6-9.6-4.32-9.6-9.6S6.72 2.4 12 2.4zm-2.4 3.6v9.6h2.4V8.4h4.8v2.4h-4.8v4.8h4.8v2.4H9.6z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark5" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.4c5.28 0 9.6 4.32 9.6 9.6s-4.32 9.6-9.6 9.6S2.4 17.28 2.4 12 6.72 2.4 12 2.4zm-2.4 3.6c-1.32 0-2.4 1.08-2.4 2.4v4.8c0 1.32 1.08 2.4 2.4 2.4h4.8c1.32 0 2.4-1.08 2.4-2.4V8.4c0-1.32-1.08-2.4-2.4-2.4H9.6zm0 2.4h4.8v4.8H9.6V8.4z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark6" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm-2.4 6h4.8v2.4h-4.8V6zm0 4.8h4.8v2.4h-4.8v-2.4zm0 4.8h7.2v2.4H9.6v-2.4z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark7" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.4c5.28 0 9.6 4.32 9.6 9.6s-4.32 9.6-9.6 9.6S2.4 17.28 2.4 12 6.72 2.4 12 2.4zm-4.8 3.6l4.8 2.4-2.4 4.8-4.8-2.4 2.4-4.8zm9.6 0l2.4 4.8-4.8 2.4-2.4-4.8 4.8-2.4zM9.6 13.2l2.4 1.2 2.4-1.2-1.2-2.4-1.2 2.4z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark8" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm-4.8 6h9.6v2.4H7.2V6zm0 4.8h9.6v2.4H7.2v-2.4zm0 4.8h9.6v2.4H7.2v-2.4z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark9" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                    <Border Style="{StaticResource PlatformBoxStyle}" Margin="8" 
                                          MouseDown="ShowContextMenu">
                                        <Grid Height="96">
                                            <Viewbox Width="40" Height="40">
                                                <Canvas Width="24" Height="24">
                                                    <Path Fill="#a0aec0" Data="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 2.4c5.28 0 9.6 4.32 9.6 9.6S17.28 21.6 12 21.6 2.4 17.28 2.4 12 6.72 2.4 12 2.4zm-1.2 3.6v2.4h2.4V6h-2.4zm0 4.8v2.4h2.4v-2.4h-2.4zm0 4.8v2.4h2.4v-2.4h-2.4z"/>
                                                </Canvas>
                                            </Viewbox>
                                            <Path x:Name="Checkmark10" Style="{StaticResource CheckmarkStyle}" 
                                                Data="M5 13l4 4L19 7" Stroke="#3b82f6" StrokeThickness="2" 
                                                Width="20" Height="20" VerticalAlignment="Top" 
                                                HorizontalAlignment="Right" Margin="0,8,8,0"/>
                                        </Grid>
                                    </Border>
                                </UniformGrid>
                                
                                <Button Content="Done" Style="{StaticResource GreenSetupButtonStyle}"
                                      HorizontalAlignment="Center" Margin="0,32,0,0" Click="FinishSetup"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Step 4: Finish -->
                        <Grid x:Name="Step4" Visibility="Collapsed">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Viewbox Width="96" Height="96" Margin="0,0,0,16">
                                    <Canvas Width="24" Height="24">
                                        <Path Fill="Transparent" Stroke="#16a34a" StrokeThickness="2"
                                            Data="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                    </Canvas>
                                </Viewbox>
                                <TextBlock Text="All Set!" FontSize="48" FontWeight="ExtraBold" 
                                         HorizontalAlignment="Center" Margin="0,0,0,16"/>
                                <TextBlock Text="Your configuration is complete. Enjoy the platform!" 
                                         Foreground="#a0aec0" FontSize="16" TextWrapping="Wrap" 
                                         HorizontalAlignment="Center" MaxWidth="400"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
            </DockPanel>
        </Border>
        
        <!-- Context Menu -->
        <Popup x:Name="ContextMenu" StaysOpen="False" AllowsTransparency="True" 
               PopupAnimation="Fade" Placement="MousePoint">
            <Border Background="#2a2a2a" CornerRadius="4" Padding="4">
                <Button Content="Link Account" 
                        Style="{StaticResource ContextMenuButtonStyle}"
                        Click="LinkAccount"/>
            </Border>
        </Popup>
    </Grid>
</Window>
