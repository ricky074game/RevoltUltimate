<Window x:Class="RevoltUltimate.Desktop.BootScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RevoltUltimate" Height="300" Width="500"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">
    <Border Background="#18181b" CornerRadius="10" BorderBrush="#27272a" BorderThickness="1">
        <Grid>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Initializing RevoltUltimate..." Foreground="White" FontSize="16" Margin="0,0,0,10" TextAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Width="300" Height="10" Foreground="#428bca"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
