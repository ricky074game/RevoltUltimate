<Window x:Class="RevoltUltimate.Desktop.GameSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:behaviors="clr-namespace:RevoltUltimate.Shared.Behaviors"
        Title="Add Game" Height="450" Width="350"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1e1e1e" BorderBrush="Gray" BorderThickness="1"
        WindowStartupLocation="CenterOwner"
        MouseDown="Window_MouseDown"
        Deactivated="Window_Deactivated">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2d2d2d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Padding="5" BorderBrush="Transparent" BorderThickness="1" Background="Transparent">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#333"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#2a2a2a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBox x:Name="SearchTextBox" Margin="10" TextChanged="SearchTextBox_TextChanged"
                     behaviors:PlaceholderBehavior.PlaceholderText="Search for a game..."
                     behaviors:PlaceholderBehavior.PlaceholderForeground="Gray"/>
            <Border x:Name="LoadingCircle" Width="20" Height="20" CornerRadius="10" Background="Transparent" BorderBrush="White" BorderThickness="2"
                    HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10,0,10,0" Visibility="Collapsed">
                <Border.RenderTransform>
                    <RotateTransform x:Name="LoadingCircleRotation" Angle="0" CenterX="10" CenterY="10"/>
                </Border.RenderTransform>
            </Border>
        </Grid>
        <ListBox x:Name="ResultsListBox" Grid.Row="1" Margin="10,0,10,10" Foreground="White" MouseDoubleClick="ResultsListBox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding AbsoluteCoverUrl}" Width="40" Height="40" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>