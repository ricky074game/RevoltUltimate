<Window x:Class="RevoltUltimate.Desktop.Setup.SigningInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Signing In" Height="150" Width="300" WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    <Grid Background="#18181b" >
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Signing In..." Foreground="White" FontSize="16" Margin="0,0,0,10" TextAlignment="Center"/>
            <ProgressBar IsIndeterminate="True" Width="200" Height="10" Foreground="#428bca"/>
        </StackPanel>
    </Grid>
</Window>