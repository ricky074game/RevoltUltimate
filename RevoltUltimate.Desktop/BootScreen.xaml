<Window x:Class="RevoltUltimate.Desktop.BootScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RevoltUltimate" Height="400" Width="600"
        WindowStyle="None" AllowsTransparency="True" Background="Black"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Image Source="pack://application:,,,/Images/RoninLogo.png" 
               HorizontalAlignment="Center" VerticalAlignment="Center" 
               Stretch="Uniform" MaxHeight="200" MaxWidth="400"/>

        <TextBlock x:Name="StatusText" 
                   Text="Initializing..." 
                   Foreground="White" 
                   FontSize="14" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Bottom" 
                   Margin="0,0,0,50" 
                   TextAlignment="Center"/>

        <ProgressBar x:Name="ProgressBar" 
                     Width="600" 
                     Height="15" 
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Top" 
                     Margin="0,385,0,0" 
                     Foreground="#428bca" 
                     Background="#27272a" 
                     Minimum="0" 
                     Maximum="100" 
                     Value="0"/>
    </Grid>
</Window>