<UserControl x:Class="RevoltUltimate.Desktop.Options.CometOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevoltUltimate.Desktop.Options"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="StatusDot" TargetType="Ellipse">
            <Setter Property="Width" Value="10"/>
            <Setter Property="Height" Value="10"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a1a1aa"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a86dc"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006cbd"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27272a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#52525b"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#27272a"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#dc2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ef4444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#b91c1c"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ToggleSwitch" TargetType="ToggleButton">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="track" Background="#3f3f46" CornerRadius="12"/>
                            <Border x:Name="thumb" Width="18" Height="18" CornerRadius="9" 
                                    Background="White" HorizontalAlignment="Left" Margin="3,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="track" Property="Background" Value="#0078D4"/>
                                <Setter TargetName="thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="thumb" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="track" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10">
            <TextBlock Text="Comet Integration" FontSize="16" FontWeight="Bold" 
                       Foreground="White" Margin="0,0,0,16"/>

            <Border Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Status Overview" Style="{StaticResource SectionHeader}"/>

                    <!-- Comet Process Status -->
                    <Border Grid.Row="1" Background="#27272a" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse x:Name="CometStatusDot" Style="{StaticResource StatusDot}" Fill="#71717a"/>
                                <StackPanel>
                                    <TextBlock Text="Comet Process" Foreground="White" FontWeight="Medium"/>
                                    <TextBlock x:Name="CometStatusText" Text="Checking..." 
                                               Style="{StaticResource InfoText}" Margin="0,2,0,0"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="RestartCometButton" Content="Restart" 
                                        Style="{StaticResource SecondaryButton}" 
                                        Margin="0,0,8,0" Click="RestartComet_Click"/>
                                <Button x:Name="StopCometButton" Content="Stop" 
                                        Style="{StaticResource DangerButton}" 
                                        Click="StopComet_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="2" Background="#27272a" CornerRadius="6" Padding="12">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Ellipse x:Name="ServiceStatusDot" Style="{StaticResource StatusDot}" Fill="#71717a"/>
                            <StackPanel>
                                <TextBlock Text="Service Connection" Foreground="White" FontWeight="Medium"/>
                                <TextBlock x:Name="ServiceStatusText" Text="Checking..." 
                                           Style="{StaticResource InfoText}" Margin="0,2,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Hosts File Configuration" Style="{StaticResource SectionHeader}"/>

                    <TextBlock Grid.Row="1" Style="{StaticResource InfoText}" Margin="0,0,0,12">
                        <Run Text="Comet requires redirecting GOG Galaxy domains to localhost. This will "/>
                        <Run Text="break normal GOG Galaxy functionality" Foreground="#f59e0b" FontWeight="SemiBold"/>
                        <Run Text=" while enabled."/>
                    </TextBlock>

                    <Border Grid.Row="2" Background="#27272a" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse x:Name="HostsStatusDot" Style="{StaticResource StatusDot}" Fill="#71717a"/>
                                    <TextBlock Text="Hosts File Entries" Foreground="White" FontWeight="Medium"/>
                                </StackPanel>
                                <TextBlock x:Name="HostsStatusText" Text="Checking..." 
                                           Style="{StaticResource InfoText}" Margin="18,4,0,0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="Enable Redirect" Foreground="#a1a1aa" 
                                           VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ToggleButton x:Name="HostsToggle" Style="{StaticResource ToggleSwitch}"
                                              Click="HostsToggle_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <Border Grid.Row="3" Background="#0f0f10" CornerRadius="6" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Required entries (pointing to 127.0.0.1):" 
                                       Foreground="#71717a" FontSize="11" Margin="0,0,0,8"/>
                            <StackPanel x:Name="HostEntriesPanel">
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <Border Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Active Game Detection" Style="{StaticResource SectionHeader}"/>

                    <Border Grid.Row="1" Background="#27272a" CornerRadius="6" Padding="16">
                        <Grid x:Name="ActiveGamePanel">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Width="48" Height="48" CornerRadius="8" 
                                    Background="#3f3f46" Margin="0,0,16,0" x:Name="GameIconBorder">
                                <TextBlock x:Name="GameIconText" Text="🎮" FontSize="24" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock x:Name="ActiveGameTitle" Text="No game detected" 
                                           Foreground="White" FontSize="14" FontWeight="Medium"/>
                                <TextBlock x:Name="ActiveGameInfo" Text="Waiting for a GOG game to connect..." 
                                           Style="{StaticResource InfoText}" Margin="0,4,0,0"/>
                                <StackPanel x:Name="AchievementInfoPanel" Orientation="Horizontal" 
                                            Margin="0,8,0,0" Visibility="Collapsed">
                                    <Border Background="#0078D4" CornerRadius="4" Padding="8,4">
                                        <TextBlock x:Name="AchievementCountText" Text="0 achievements" 
                                                   Foreground="White" FontSize="11"/>
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <Border x:Name="TroubleshootingCard" Style="{StaticResource CardBorder}" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="⚠" Foreground="#f59e0b" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock Text="Issues Detected" Style="{StaticResource SectionHeader}" Margin="0"/>
                    </StackPanel>

                    <TextBlock x:Name="TroubleshootingText" Grid.Row="1" Style="{StaticResource InfoText}" 
                               Margin="0,0,0,12"/>

                    <Button x:Name="FixIssuesButton" Grid.Row="2" Content="Fix Issues (Requires Admin)" 
                            Style="{StaticResource ActionButton}" HorizontalAlignment="Left"
                            Click="FixIssues_Click"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>