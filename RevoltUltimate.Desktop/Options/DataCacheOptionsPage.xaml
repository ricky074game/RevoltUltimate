<UserControl x:Class="RevoltUltimate.Desktop.Options.DataCacheOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevoltUltimate.Desktop.Options"
             mc:Ignorable="d" 
             d:DesignHeight="650" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#1e1e1e"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Section Header Style -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Info Text Style -->
        <Style x:Key="InfoText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a1a1aa"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a86dc"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006cbd"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Background" Value="#27272a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#52525b"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#27272a"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Danger Button Style -->
        <Style x:Key="DangerButton" TargetType="Button">
            <Setter Property="Background" Value="#dc2626"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#ef4444"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#b91c1c"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#3f3f46"/>
                                <Setter Property="Foreground" Value="#71717a"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Progress Bar Style -->
        <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
            <Setter Property="Background" Value="#27272a"/>
            <Setter Property="Foreground" Value="#0078D4"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" CornerRadius="4"/>
                            <Border x:Name="PART_Track" CornerRadius="4"/>
                            <Border x:Name="PART_Indicator" Background="{TemplateBinding Foreground}" 
                                    CornerRadius="4" HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="10">
            <!-- Page Title -->
            <TextBlock Text="Data &amp; Cache" FontSize="16" FontWeight="Bold" 
                       Foreground="White" Margin="0,0,0,16"/>

            <!-- Cache Management Card -->
            <Border Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Cache Management" Style="{StaticResource SectionHeader}"/>

                    <!-- Cache Size Overview -->
                    <Border Grid.Row="1" Background="#27272a" CornerRadius="6" Padding="16" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Total Cache Size" Foreground="White" FontWeight="Medium"/>
                                <TextBlock x:Name="TotalCacheSizeText" Text="Calculating..." 
                                           Style="{StaticResource InfoText}" Margin="0,4,0,0"/>
                            </StackPanel>

                            <Button Grid.Column="1" Content="Refresh" Style="{StaticResource SecondaryButton}"
                                    Click="RefreshCacheSize_Click" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Individual Cache Items -->
                    <StackPanel Grid.Row="2" Margin="0,0,0,12">
                        <!-- Image Cache -->
                        <Border Background="#0f0f10" CornerRadius="6" Padding="12" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="🖼️ Achievement Image Cache" Foreground="White" FontSize="13"/>
                                    <TextBlock x:Name="ImageCacheSizeText" Text="0 MB" 
                                               Style="{StaticResource InfoText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" x:Name="ImageCacheCountText" Text="0 files" 
                                           Foreground="#71717a" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                <Button Grid.Column="2" Content="Clear" Style="{StaticResource SecondaryButton}"
                                        Click="ClearImageCache_Click" Padding="12,6"/>
                            </Grid>
                        </Border>

                        <!-- App Data Cache -->
                        <Border Background="#0f0f10" CornerRadius="6" Padding="12">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="📁 Application Data" Foreground="White" FontSize="13"/>
                                    <TextBlock x:Name="AppDataSizeText" Text="0 MB" 
                                               Style="{StaticResource InfoText}" Margin="0,2,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="1" x:Name="AppDataCountText" Text="0 files" 
                                           Foreground="#71717a" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                <Button Grid.Column="2" Content="Open Folder" Style="{StaticResource SecondaryButton}"
                                        Click="OpenAppDataFolder_Click" Padding="12,6"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Clear All Cache Button -->
                    <Button Grid.Row="3" Content="Clear All Cache" Style="{StaticResource SecondaryButton}"
                            Click="ClearAllCache_Click" HorizontalAlignment="Left"/>
                </Grid>
            </Border>

            <!-- Pre-download Images Card -->
            <Border Style="{StaticResource CardBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Pre-download Achievement Images" Style="{StaticResource SectionHeader}"/>

                    <TextBlock Grid.Row="1" Style="{StaticResource InfoText}" Margin="0,0,0,12">
                        <Run Text="Download all achievement images ahead of time for offline viewing. "/>
                        <Run Text="This may take a while depending on your library size."/>
                    </TextBlock>

                    <!-- Estimate Info -->
                    <Border Grid.Row="2" Background="#27272a" CornerRadius="6" Padding="12" Margin="0,0,0,12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                                <TextBlock x:Name="TotalImagesText" Text="0" Foreground="#0078D4" 
                                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Total Images" Style="{StaticResource InfoText}" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                                <TextBlock x:Name="EstimatedSizeText" Text="0 MB" Foreground="#0078D4" 
                                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Estimated Size" Style="{StaticResource InfoText}" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                                <TextBlock x:Name="AlreadyCachedText" Text="0" Foreground="#22c55e" 
                                           FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Already Cached" Style="{StaticResource InfoText}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Progress Section -->
                    <Border x:Name="DownloadProgressPanel" Grid.Row="3" Background="#0f0f10" 
                            CornerRadius="6" Padding="12" Margin="0,0,0,12" Visibility="Collapsed">
                        <StackPanel>
                            <Grid Margin="0,0,0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="DownloadStatusText" Text="Downloading..." 
                                           Foreground="White" FontWeight="Medium"/>
                                <TextBlock x:Name="DownloadProgressPercent" Grid.Column="1" Text="0%" 
                                           Foreground="#0078D4" FontWeight="Bold"/>
                            </Grid>

                            <ProgressBar x:Name="DownloadProgressBar" Style="{StaticResource ModernProgressBar}" 
                                         Value="0" Maximum="100" Margin="0,0,0,8"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="✓ " Foreground="#22c55e"/>
                                    <TextBlock x:Name="SuccessCountText" Text="0" Foreground="#22c55e"/>
                                    <TextBlock Text=" downloaded" Foreground="#71717a"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock Text="✗ " Foreground="#ef4444"/>
                                    <TextBlock x:Name="FailedCountText" Text="0" Foreground="#ef4444"/>
                                    <TextBlock Text=" failed" Foreground="#71717a"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="⏳ " Foreground="#f59e0b"/>
                                    <TextBlock x:Name="RemainingCountText" Text="0" Foreground="#f59e0b"/>
                                    <TextBlock Text=" remaining" Foreground="#71717a"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Download Buttons -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal">
                        <Button x:Name="StartDownloadButton" Content="Start Download" 
                                Style="{StaticResource ActionButton}" Click="StartImageDownload_Click"/>
                        <Button x:Name="CancelDownloadButton" Content="Cancel" 
                                Style="{StaticResource DangerButton}" Margin="10,0,0,0"
                                Click="CancelImageDownload_Click" Visibility="Collapsed"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Danger Zone Card -->
            <Border Style="{StaticResource CardBorder}" BorderBrush="#dc2626" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Danger Zone" Style="{StaticResource SectionHeader}" 
                                   Foreground="#ef4444" Margin="0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="1" Style="{StaticResource InfoText}" Margin="0,0,0,12">
                        <Run Text="This will "/>
                        <Run Text="PERMANENTLY DELETE" Foreground="#ef4444" FontWeight="Bold"/>
                        <Run Text=" all your data including games, achievements, settings, and profile. "/>
                        <Run Text="This action cannot be undone. Your cat might also judge you."/>
                    </TextBlock>

                    <Button x:Name="WipeDataButton" Grid.Row="2" Content="Wipe All Data" 
                            Style="{StaticResource DangerButton}" Click="WipeData_Click"
                            HorizontalAlignment="Left"/>
                </Grid>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>