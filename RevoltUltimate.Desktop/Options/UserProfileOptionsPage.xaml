<UserControl x:Class="RevoltUltimate.Desktop.Options.UserProfileOptionsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevoltUltimate.Desktop.Options"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TextBlock Text="General Options" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
        <CheckBox Content="Enable Feature X" Margin="0,5"/>
        <CheckBox Content="Show Notifications" Margin="0,5"/>
        <TextBlock Text="Theme:" Margin="0,10,0,5"/>
        <ComboBox>
            <ComboBoxItem Content="Light"/>
            <ComboBoxItem Content="Dark"/>
        </ComboBox>
    </Grid>
</UserControl>
